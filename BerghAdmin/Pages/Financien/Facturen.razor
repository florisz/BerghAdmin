@page "/Financien/Facturen"

@using BerghAdmin.Authorization
@using BerghAdmin.General

@inject NavigationManager _navigationManager

@attribute [Authorize(Policy = "IsBeheerFinancien")]

@code
{

    protected override async Task OnInitializedAsync()
    {
        // Open toon facturen window for the selected ambassadeur
        var url = _navigationManager.CreateUrlWithSelectedIdAndReturnUrl(0, "Ambassadeurs/Facturen");
        _navigationManager.NavigateTo(url);
    }
}
