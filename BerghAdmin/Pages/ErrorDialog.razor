@using Syncfusion.Blazor.Buttons

<SfDialog Width="250px" IsModal="true" @bind-Visible="@IsVisible">
    <DialogEvents OnOverlayModalClick="@OnOverlayModalClick" />
    <DialogTemplates>
        <Header>Probleempje...</Header>
        <Content>@_content</Content>
    </DialogTemplates>
</SfDialog>

@code {
    public bool IsVisible { get; set; } = false;
    private string _content = "";

    public void Show(string errorMessage)
    {
        _content = errorMessage;
        this.IsVisible = true;
        this.StateHasChanged();
    }

    private void OnOverlayModalClick(OverlayModalClickEventArgs arg)
    {
        this.IsVisible = false;
        this.StateHasChanged();
    }
}